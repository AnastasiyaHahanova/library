{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div><a class="btn btn-lg btn-default" href="/user/create" type="submit">
            Register
        </a></div>
    <div class="block auth">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <div class="row"><h1 class="h3 mb-3 font-weight-normal">Please sign in</h1></div>
            <div class="row">
                <div><label for="inputUsername">Username</label></div>
                <div><input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="input"
                            required autofocus></div>
            </div>
            <div class="row">
                <div><label for="inputPassword">Password</label></div>
                <div><input type="password" name="password" id="inputPassword" class="input" required></div>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div class="row">
                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
            </div>

        </form>
    </div>
    {% include 'Layout/footer.html.twig' %}
{% endblock %}
