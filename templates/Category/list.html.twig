{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    {% include 'Layout/nav-menu.html.twig' %}
    <div class="">
        <table>
            <thead>
            <th>#</th>
            <th>Name</th>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td> {{ category.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}